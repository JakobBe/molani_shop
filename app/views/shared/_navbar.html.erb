    <% end %>
    <!-- Navigation on big screen-->
    <div class="navbar-categories hidden-xs hidden-sm">
      <%= link_to "Krawatten", category_items_path(:category => "Krawatte"), class: "navbar-molani-item navbar-molani-link" %>
