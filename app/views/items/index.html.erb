
<div class="container">
  <div class="row">
      <% @items.each do |item|%>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path item.name %>');">
            </div>
            <div class="card-description">
              <h2><%= link_to item.name, item_path(item), class:"item-title"%></h2>
              <p>Elegante <%= "#{item.category}" %> aus feinster italienischer Seide</p>
              <p><%= "#{item.price}.00â‚¬" %></p>
            </div>
          </div>
      </div>
      <% end %>
  </div>
</div>


