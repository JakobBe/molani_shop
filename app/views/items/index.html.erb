
<div class="container">
  <div class="row">
    <ul  class="item-list">
      <% @items.each do |item|%>
      <div class="col-xs-8 col-sx-offset-2 col-sm-4">
      <!-- insert <div class="card"> -->
        <li class="list-item">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path item.name %>');">
            <div class="card-description">
              <h2><%= link_to item.name, item_path(item), class:"item-title"%></h2>
              <p>Very cool item, <%= "für #{item.price}€" %></p>
            </div>
          </div>
        </li>
      </div>
      <% end %>
    </ul>
  </div>
</div>
